<Window x:Class="arraylistapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arraylistapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addbutton" Content="add" HorizontalAlignment="Left" Height="74" Margin="35,203,0,0" VerticalAlignment="Top" Width="222" FontSize="36" Click="addbutton_Click"/>
        <Button x:Name="removebutton" Content="remove" HorizontalAlignment="Left" Height="74" Margin="269,203,0,0" VerticalAlignment="Top" Width="222" FontSize="36" Click="removebutton_Click"/>
        <Button x:Name="showallbutton" Content="show All" HorizontalAlignment="Left" Height="74" Margin="505,203,0,0" VerticalAlignment="Top" Width="222" FontSize="36" Click="Button_Click_2"/>
        <TextBox x:Name="txtdata" HorizontalAlignment="Left" Height="48" Margin="37,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="688" FontSize="24"/>

    </Grid>
</Window>
